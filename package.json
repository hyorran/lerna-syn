    "simple-progress-webpack-plugin": "^1.1.2",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.23.1",
    "svg-inline-loader": "^0.8.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14",
    "jest": "^24.7.1",
    "enzyme": "^3.9.0",
    "jest-enzyme": "^7.0.2",
    "enzyme-adapter-react-16": "^1.12.1",
    "jest-environment-enzyme": "^7.0.2",
    "sinon": "^7.3.2",
    "enzyme-to-json": "^3.3.5",
    "identity-obj-proxy": "^3.0.0",
    "jest-runner-eslint": "^0.7.3",
    "eslint-plugin-jest": "^22.5.1",
    "husky": "^2.2.0",
    "cross-env": "^5.2.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --skip-npm",
    "ls": "lerna la",

    "clean": "lerna exec --parallel -- \"rm -rf ./lib\" \"rm -rf ./dist\" \"rm -rf ./build\"",
    "postinstall": "lerna run postinstall",

    "step-up": "lerna publish --skip-npm",

    "start:enigma": "yarn clean && cd apps/web/enigma && yarn start:enigma",
    "build-dev:enigma": "yarn clean && cd apps/web/enigma && yarn build-dev:enigma",
    "build:enigma": "yarn clean && cd apps/web/enigma && yarn build:enigma",
    "publish:enigma": "yarn build:enigma && cd apps/web/enigma && yarn publish:enigma",

    "start:self-service": "yarn clean && cd apps/desktop/self-service && yarn start:self-service",
    "serve:self-service": "cd apps/desktop/self-service && yarn serve:self-service",
    "build:self-service": "yarn clean && cd apps/desktop/self-service && yarn build:self-service",
    "release:self-service": "yarn build:self-service && cd apps/desktop/self-service && yarn release:self-service",
    "publish:self-service": "yarn build:self-service && cd apps/desktop/self-service && yarn publish:self-service",

    "start:docs": "cd docs/web/ && yarn start:docs",
    "build:docs": "cd docs/web/ && yarn build:docs",
    "publish:docs": "cd docs/web/ && yarn publish:docs",

    "test": "jest --config ./jest/jest.config.js",
    "test:watch": "jest --watch",
    "lint": "eslint --cache ./**/*/src --ext .js",
    "lint:fix": "yarn lint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn lint && yarn test"
    }
  }
}
